<source>
  @type tail
  tag docker.*
  path /var/lib/docker/containers/*/*-json.log
  format json
  refresh_interval 10s
  time_key time
  time_format %FT%T
</source>

<source>
  type forward
  port 24224
  bind 0.0.0.0
</source>

<match *.*>
      type logzio_buffered
      endpoint_url https://listener.logz.io:8071?token=iqLGULQBAUmfbZKvbyEbwKNxUuqNyaJu&type=dockerstuffs
      output_include_time true
      output_include_tags true
      buffer_type    file
      buffer_path    /tmp/fluentd/logsz_buffer
      flush_interval 10s
      buffer_chunk_limit 1m   # Logz.io has bulk limit of 10M. We recommend set this to 1M, to avoid oversized bulks
 </match>